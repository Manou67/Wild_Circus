<form method="post" action="{{ path('team_delete', {'id': team.id}) }}" onsubmit="return confirm('Etes-vous certain de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
    <button class="btn btn-md btn-light">Supprimer</button>
</form>
