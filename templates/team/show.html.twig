{% extends 'base.html.twig' %}

{% block title %}L'équipe{% endblock %}

{% block body %}
    <h1 class="titleH1">L'équipe</h1>

    <table class="table">
        <tbody>
           <tr>
                <th>Nom</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ team.firstname }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ team.role }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('team_index') }}"><button class="btn btn-md btn-light">Retour à la liste</button></a>
<br>
    <a href="{{ path('team_edit', {'id': team.id}) }}"><button class="btn btn-md btn-light">Editer</button></a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
