{% extends 'base.html.twig' %}

{% block title %}Nos actualités{% endblock %}

{% block body %}
    {% for news in news %}
        <div class="card mb-4" style="max-width: 800px; height: 150px; margin-top: 50px;">
            <div class="row no-gutters justify-content-center">
                <div class="col-md-16">
                    <div class="card-body">
                        <h5 class="card-title">Actualité publiée le {{ news.date ? news.date|date('d-m-Y') : '' }}</h5>
                        <p class="card-text">{{ news.description }}</p>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
{% endblock %}
