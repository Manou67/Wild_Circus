{% block title %}S'inscrire{% endblock %}

{% block body %}
    <div class="container-form">
        <h1 class="titleH1">S'inscrire</h1>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.name) }}
